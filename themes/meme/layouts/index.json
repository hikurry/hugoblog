{{- $.Scratch.Add "index" slice -}}
{{- range .Site.RegularPages -}}
    {{- $.Scratch.Add "index" (dict "title" .Title "categories" .Params.categories "tags" .Params.tags "permalink" .Permalink "summary" .Summary "date" (.Date.Format "2006-01-02") "content" .Plain)  -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}