        <entry>
            <title type="text">拜拜北六环</title>
            <link rel="alternate" type="text/html" href="https://joysblog.vercel.app/posts/goodbye-my-university/" />
            <id>https://joysblog.vercel.app/posts/goodbye-my-university/</id>
